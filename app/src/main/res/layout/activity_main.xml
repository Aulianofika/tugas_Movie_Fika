<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#B1F2EE"
        android:backgroundTint="#B1F2EE"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:text="HELLO EVERYONE"
            android:textAlignment="center"
            android:textColor="#050505"
            android:textSize="28sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txtname"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_gravity="center|center_horizontal"
            android:layout_marginTop="30sp"
            android:background="#FFFFFF"
            android:backgroundTint="#EBE3DD"
            android:ems="10"
            android:hint="Input Ur name"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txtpass"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginTop="10sp"
            android:background="#FCFCFC"
            android:backgroundTint="#EBE3DD"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:textAlignment="center"
            android:textColor="#03A9F4"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnlogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30sp"
            android:text="Login"
            android:textColor="#FAF9F9"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnloginpage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Loginpage" />

        <Button
            android:id="@+id/btnlistview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login List" />

        <Button
            android:id="@+id/btnbuah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login Buah" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>